extends ./templates/template

block contenido 
    main(class='w-11/12 mt-16 mx-auto')
        form(action="/login" method='POST', class='md:w-1/4 my-0 mx-auto ') 
            if(errores)
                each error in errores 
                    .mb-5 
                        span(class='text-red-400 block font-semibold text-lg text-center uppercase')= error.mensaje
            .mb-5
                label(for="usuario", class='block mb-2 text-sm font-medium md:text-lg text-gray-900') Usuario
                input(type="text" class='bg-gray-50 border border-gray-300 text-gray-900 text-xl rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', placeholder='Ingresa tu usuario', id='usuario', name='usuario' value=usr)

            .mb-5
                label(for="password", class='block mb-2 text-sm font-medium md:text-lg text-gray-900') Contrasena
                input(type="password" class='bg-gray-50 border border-gray-300 text-gray-900 text-xl rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5', placeholder='Ingresa tu contrasena', id='password', name='password')
            input(type="submit", value="Iniciar Sesion" class='border rounded-lg bg-blue-500 hover:bg-blue-600 text-white px-5 py-2.5 cursor-pointer block w-full md:w-max')
            
    