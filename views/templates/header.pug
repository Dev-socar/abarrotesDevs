    nav(class='flex flex-col items-center gap-5 md:gap-0 md:flex-row md:justify-between md:items-center p-5 bg-opacity-75 text-white')
        a(href='/' class='text-6xl font-bold')
          h1 #{nombreSitio}
        div(class='flex flex-col justify-center items-center gap-5  md:flex-row')
